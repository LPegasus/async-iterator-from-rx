{
  "include": ["src"],
  "compilerOptions": {
    "target": "esnext",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "strict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "outDir": "lib",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": true
  }
}
